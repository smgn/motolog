<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/databackgroundColor"
    android:orientation="vertical"
    android:tag="mainLogFragment" >

    <ListView
        android:id="@+id/remList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.9"
        android:transcriptMode="alwaysScroll" >
    </ListView>

    <TextView
        android:id="@+id/nologsinfo"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.9"
        android:gravity="center_horizontal|center_vertical"
        android:text="No reminders!" />

    <Button
        android:id="@+id/NewRemButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@drawable/buttonselector"
        android:gravity="right|center_vertical"
        android:paddingRight="20dp"
        android:text="@string/NewRemCreation"
        android:textColor="@color/tabtextcolor" />

</LinearLayout>